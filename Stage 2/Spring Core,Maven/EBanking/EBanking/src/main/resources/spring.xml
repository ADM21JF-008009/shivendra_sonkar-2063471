<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
   <bean id="propertyPlaceholderConfiguree" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
     <property name="location" value="accounts.properties"/>
   </bean>
   <bean name="bankAccount" class="com.cts.EBanking.BankAccount" abstract="true"/>
   <bean id="smartBankAccount" class="com.cts.EBanking.SmartBankAccount" parent="bankAccount">
   <constructor-arg value="100" type="int"/>
   <constructor-arg value="Joe"/>
   <constructor-arg value="10000" type="double"/>
   <constructor-arg>
     <list>
      <value>${current}</value>
      <value>${recurring}</value>
      <value>${fixed}</value>
     </list>
   </constructor-arg>
   </bean>
   

</beans>